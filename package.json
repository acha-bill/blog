{
  "name": "garriBlog",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "NODE_ENV=test jest && codecov",
    "lint": "eslint services --fix",
    "dc:up": "docker-compose up --build",
    "dc:down": "docker-compose down",
    "dctest:up": "docker-compose -f docker-compose.test.yml up --build --exit-code-from api",
    "dctest:down": "docker-compose -f docker-compose.test.yml down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "Bill Acha",
  "devDependencies": {
    "codecov": "^3.6.5",
    "eslint": "^5.10.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moleculer-repl": "^0.5.3",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "ioredis": "^4.2.0",
    "jsonwebtoken": "^8.4.0",
    "moleculer": "^0.13.5",
    "moleculer-db": "^0.7.6",
    "moleculer-db-adapter-mongo": "^0.4.2",
    "moleculer-web": "^0.8.5",
    "nats": "^1.0.1"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage/",
    "collectCoverage": true,
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  },
  "pre-commit": [
    "lint"
  ]
}